{
  "name": "sportlog/garmin-connect",
  "description": "Authenticate to Garmin Connect and query data.",
  "type": "library",
  "keywords": [
    "connect api",
    "garmin"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Johannes Aberidis"
    }
  ],
  "autoload": {
    "psr-4": {
      "Sportlog\\GarminConnect\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sportlog\\GarminConnect\\": "src/",
      "Sportlog\\GarminConnect\\Test\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.5"
  },
  "require": {
    "php": ">=8.2",
    "psr/log": "^3.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit --testsuite garmin-connect",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
  }
}
